            <% user.posts.reverse().forEach((post)=>{ %>
                <div class="postcontainer border-[1px] border-zinc-700 rounded-md p-4 w-1/3 bg-zinc-800 mt-2">
                    <p class="text-blue-500 text-md mb-1">@<%= user.username %></p>
                    <p class="text-sm tracking-tight"><%= post.content %></p>
                        <small class="text-slate-400 text-xs block my-3"><%= post.likes.length %> likes</small>
                    <div class="btns flex gap-2">
                        <a href="/like/<%= post._id %>" name="like" id="like" class="text-pink-500 text-sm" onclick="handleLike()">
                            <%= post.likes.indexOf(user._id)? 'Like' : 'Unlike' %>
                        </a>
                        <a href="/edit/<%= post._id %>" class="text-yellow-500 text-sm">Edit</a>
                    </div>
                    <small class="mt-2 text-xs text-zinc-500 inline-block">created at: <%= new Date(post.date).toLocaleString('en-IN', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></small>
                </div>
